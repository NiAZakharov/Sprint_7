              "type": ["integer", "null"]
            },
            "firstName": {
              "type": ["string", "null"]
            },
            "lastName": {
              "type": ["string", "null"]
            },
            "address": {
              "type": ["string", "null"]
            },
            "metroStation": {
              "type": ["string", "null"]
            },
            "phone": {
              "type": ["string", "null"]
            },
            "rentTime": {
              "type": ["integer", "null"]
            },
            "deliveryDate": {
              "type": ["string", "null"]
            },
            "track": {
              "type": ["integer", "null"]
            },
            "color": {
              "type": ["array","null"],
              "items": [
                {
                  "type": ["string", "null"]
                }
              ]
            },
            "comment": {
              "type": ["string", "null"]
            },
            "createdAt": {
              "type": "string"
            },
            "updatedAt": {
              "type": "string"
            },
            "status": {
