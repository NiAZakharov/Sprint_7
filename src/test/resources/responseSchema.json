        },
        "limit": {
          "type": "integer"
        }
      },
      "required": [
        "page",
        "total",
        "limit"
      ]
    },
    "availableStations": {
      "type": "array",
      "items": [
        {
          "type": ["object","null"],
          "properties": {
            "name": {
              "type": "string"
            },
            "number": {
              "type": "string"
